<!-- View added transaction --> 

<% include _header %>

<!-- Navigation Bar -->
<% include _navbar %>

<main role="main" class="container">
  
  <div class="jumbotron">
    <div class="row">
      <div class="col-sm-6">
        <h2>All transactions</h2>
        <div class="table-responsive">
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th>Amount</th>
                <th>Transaction Date</th>
                <th>Category</th>
                <th>Note</th>
              </tr>
            </thead>
            <tbody>
              <% expenses.forEach(function(expense){ %>
              <tr>
                <td><%= expense.Amount %></td>
                <td><%= expense.created.toDateString() %></td>
                <td><%= expense.Category %> </td>
                <td><%= expense.Note %> </td>
              </tr>
              <% }); %>
            </tbody>
          </table>
          <a class="btn btn-lg btn-primary" href="/manage" role="button">Back &raquo;</a>
        </div>
      </div>
      
      <div class="col-sm-6">
        <div class="card">
          <div class="card-body">
            <h1 class="card-title" style="display: flex;">New Transaction</h1>
            <h5 class="lead"><%= newexpense.Category %> </h5>
            <p class="lead" style="color: #e51c23!important;font-weight: 400; font-size: 30px;"> $
              <%= newexpense.Amount %> </p>
            <p class="lead" style=" font-size: 12px;line-height: 24px;color: rgba(0,0,0,.54);">
              <small><%= newexpense.Note %> </small>
            </p>
            <p class="lead"><%= newexpense.created.toDateString() %> </p>
            <p class="lead"><%= currentUser.name()  %> </p>
          </div>
        </div>
      </div>
    </div>
  </div>

</main>

<% include _footer %>